<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>


    <% user.posts.each do |post| %>
    <li>
        <%= post.content %>
          <% post.comments.each do |comment| %>
          <li>
            <%= comment.content %>
          </li>
          <% end %>
    </li>
    <% end %>



  <% end %>
</div>

<%= link_to "New user", new_user_path %>
